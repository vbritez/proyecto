<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dynamicformEntryTypeOptionTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:textAppearance="@style/textSize" />

    <RadioGroup
        android:id="@+id/dynamicformEntryTypeOptionRadioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dynamicformEntryTypeOptionTitle"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/dynamicformEntryTypeOptionItem1"
            style="@style/servicesItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RadioButton
            android:id="@+id/dynamicformEntryTypeOptionItem2"
            style="@style/servicesItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RadioButton
            android:id="@+id/dynamicformEntryTypeOptionItem3"
            style="@style/servicesItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RadioButton
            android:id="@+id/dynamicformEntryTypeOptionItem4"
            style="@style/servicesItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <RadioButton
            android:id="@+id/dynamicformEntryTypeOptionItem5"
            style="@style/servicesItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </RadioGroup>

</RelativeLayout>