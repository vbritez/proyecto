<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >
    
    <TextView
            android:id="@+id/loginTitle"
            android:layout_width="200dp"
            android:layout_height="17dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:text="@string/tigomoney_login_title"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/cellphoneNumberView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/loginTitle"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:text="@string/tigomoney_login_cellphoneNumber"
        android:textAppearance="@style/textSize" />

    <EditText
        android:id="@+id/cellphoneNumberEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cellphoneNumberView"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:ems="10"
        android:inputType="number" >
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cellphoneNumberEdit"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:text="@string/tigomoney_login_password"
        android:textAppearance="@style/textSize" />

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/passwordView"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:ems="10"
        android:password="true"
        android:inputType="phone" >
    </EditText>
    
    <Button
        android:id="@+id/tigoMoneyLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/passwordEdit"
        android:layout_below="@+id/passwordEdit"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_selector"
        android:text="@string/tigomoney_login" />

</RelativeLayout>