<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/orderProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAppearance="@style/textSize" />

    <EditText
        android:id="@+id/terportRegisterContainerEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/orderProductCount"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/terportRegisterContainerView"
        android:ems="10"
        android:inputType="text" />
    

    <EditText
        android:id="@+id/terportRegisterUbicationEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/terportRegisterContainerEdit"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/terportRegisterContainerView"
        android:ems="10"
        
        android:inputType="number" />

    <TextView
        android:id="@+id/terportRegisterUbicationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/terportRegisterUbicationEdit"
        android:layout_alignBottom="@+id/terportRegisterUbicationEdit"
        android:layout_marginRight="7dp"
        android:text="@string/order_quantity"
        android:textAppearance="@style/textSize" />

    <EditText
        android:id="@+id/orderUnitPriceEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/orderDiscountEdit"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/terportRegisterUbicationEdit"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/orderDiscountEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/terportRegisterUbicationEdit"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/terportRegisterContainerView"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/terportRegisterContainerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/terportRegisterContainerEdit"
        android:layout_alignBottom="@+id/terportRegisterContainerEdit"
        android:layout_marginRight="15dp"
        android:text="@string/order_product_code"
        android:textAppearance="@style/textSize" />

    <TextView
        android:id="@+id/orderDiscountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/orderDiscountEdit"
        android:layout_alignBottom="@+id/orderDiscountEdit"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dp"
        android:text="@string/order_discount"
        android:textAppearance="@style/textSize" />

    <TextView
        android:id="@+id/orderUnitPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/orderUnitPriceEdit"
        android:layout_alignBottom="@+id/orderUnitPriceEdit"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="7dp"
        android:text="@string/order_unit_price"
        android:textAppearance="@style/textSize" />

    <ImageView
        android:id="@+id/productRemove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/orderUnitPriceEdit"
        android:src="@drawable/delete"
        android:contentDescription="@string/imagen" />

</RelativeLayout>